<%- include('header'); -%>
    <div class="box">
        <h1 id="heading"><%= date %></h1>
    </div>
    <div class="box">
        <% for(i=0; i<task.length; i++){ %>
            <div class="item">
                <input type="checkbox">
                <p><%= task[i] %></p>
            </div>
        <% } %>
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button">+</button>
        </form>
    </div>
    <%- include('footer'); -%>